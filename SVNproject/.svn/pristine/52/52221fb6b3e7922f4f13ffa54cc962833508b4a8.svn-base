/* 1.--------------------------- 顶部 --------------------------- */
/* 顶部外层容器 */
.topbar{
    height: 28px;
    background:#101010;
}
/* 顶部里层容器 */
.topbar .container{
    height: 28px;
    background-color: #101010;
}
/* 里面的p标签 */
.topbar .container p{
    height: 28px;
    line-height: 28px;
    color:#a0a0a0;
}
/* 第一个p标签 */
.topbar .container p:first-child{
    text-indent: 210px;
}
/* 第一个p标签下面的a标签 */
.topbar .container p:first-child a{
    color: #fff;
    text-decoration: none;
}
/* 第二个p标签 */
.topbar .container p:nth-child(2){
    margin-right: 10px;
}
/* 第二个p标签 下面的标题和注册 */
.topbar .container p:nth-child(2) .title,.topbar .container p:nth-child(2) .register{
    color:#ff6700;
}
/* 第二个p标签下面的登陆 */
.topbar .container p:nth-child(2) .login{
    color: #fff;
}
/* 2.---------------------------  导航 ---------------------------*/
.nav{
    height: 80px;
    background-color: #fff;
}
/* 搜索购物车订单大容器 */
.nav .search-shopcart-order{
    padding-top: 5px;
    height: 35px;
    background-color: #fff;
}
/* 搜索框 */
.nav .search-shopcart-order .search-input{
    width:440px;
    height: 35px;
    background-color: #f76a0c;
    margin-right: 38px;
    position: relative;
}
/* 搜索框中的图标 */
.nav .search-shopcart-order .search-input span{
    display: inline-block;
    width: 45px;
    height: 30px;
    position: absolute;
    right: 0;
    top: 0;
    background-image: url('../img/bgicon.png');
}
/* 搜索框 */
.nav .search-shopcart-order .search-input .search{
    width: 390px;
    height: 31px;
    bottom: 2px soild red;
    text-indent: 10px;
    color: rgb(238, 11, 11);
    outline: none;
}
/* 购物车和订单 */
.nav .search-shopcart-order .shopcart-order{
    width: 200px;
    height: 35px;
    background-color: pink;
    font-size:0;
}
/* 购物车订单按钮 */
.nav .search-shopcart-order .shopcart-order button{
    width: 100px;
    height: 35px;
    background-color:#ebebeb;
    bottom: 1px soild #ccc;
    font-size: 12px;
    color: #333;
}
/* 购物车按按钮 */
.nav .search-shopcart-order .shopcart-order button:nth-child(1){
    background-color: #ff6700;
    color: #fff;
    padding-left: 3px;
}
/* 购物车图标 */
.nav .search-shopcart-order .shopcart-order button:nth-child(1) span:first-child{
    /* background-image: url('../img/bgicon.png');  图片还没有裁剪 */
    background-repeat: no-repeat;
    display: inline-block;
    vertical-align: top;
    width: 20px;
    height: 16px;
    margin-left: 3px;
}
/* 购物车文字 */
.nav .search-shopcart-order .shopcart-order button:nth-child(1) span:nth-child(2){
    vertical-align: top;
    display: inline-block;
}
/* 数量 */
.nav .search-shopcart-order .shopcart-order button:nth-child(1) span:nth-child(3){
    vertical-align: top;
    display: inline-block;
    width: 20px;
    height: 15px;
}
/* 分类导航 */
.nav .category-menu{
    margin-top: 15px;
    height: 30px;
    background-color: red;
}
